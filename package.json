{
  "name": "@joaohouto/editor",
  "version": "0.0.1",
  "description": "Rich text editor React component built with Tiptap",
  "license": "MIT",
  "author": "JoÃ£o Couto",
  "keywords": [],
  "files": [
    "dist",
    "README.md"
  ],
  "main": "./dist/@joaohouto/editor.umd.js",
  "module": "./dist/@joaohouto/editor.es.js",
  "exports": {
    ".": {
      "import": "./dist/@joaohouto/editor.es.js",
      "require": "./dist/@joaohouto/editor.umd.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "test": "vitest run",
    "watch": "vitest",
    "coverage": "vitest run --coverage"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true,
      "es2020": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "parserOptions": {
      "sourceType": "module"
    }
  },
  "dependencies": {
    "@tiptap/core": "^2.1.7",
    "@tiptap/extension-code": "^2.1.7",
    "@tiptap/extension-color": "^2.1.8",
    "@tiptap/extension-document": "^2.1.7",
    "@tiptap/extension-dropcursor": "^2.1.7",
    "@tiptap/extension-highlight": "^2.1.7",
    "@tiptap/extension-image": "^2.1.7",
    "@tiptap/extension-link": "^2.1.7",
    "@tiptap/extension-list-item": "^2.1.7",
    "@tiptap/extension-paragraph": "^2.1.7",
    "@tiptap/extension-task-item": "^2.1.7",
    "@tiptap/extension-task-list": "^2.1.7",
    "@tiptap/extension-text": "^2.1.7",
    "@tiptap/extension-text-style": "^2.1.8",
    "@tiptap/extension-typography": "^2.1.7",
    "@tiptap/pm": "^2.1.7",
    "@tiptap/react": "^2.1.7",
    "@tiptap/starter-kit": "^2.1.7",
    "@tiptap/suggestion": "^2.1.7",
    "react-hot-toast": "^2.4.1",
    "react-icons": "^4.10.1",
    "styled-components": "^6.0.7",
    "tippy.js": "^6.3.7"
  },
  "devDependencies": {
    "@testing-library/dom": "^9.3.1",
    "@testing-library/react": "^14.0.0",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.4",
    "c8": "^8.0.1",
    "eslint": "^8.49.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "jsdom": "^22.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-test-renderer": "^18.2.0",
    "vite": "^4.4.9",
    "vitest": "^0.34.4"
  }
}
